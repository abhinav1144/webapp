pipeline {
  agent any 
  stages {
    stage ('Check-Git-Secrets') {
      steps {
        sh ' rm trufflehog || true '
        sh ' sudo docker run -t gesellix/trufflehog --json https://github.com/abhinav1144/webapp.git> trufflehog '
        sh ' cat trufflehog '
      }
    }
    stage ('Source Composition Analysis') {
      steps {
         sh 'sudo rm owasp* || true'
         sh 'wget "https://raw.githubusercontent.com/abhinav1144/webapp/test/owasp-dependency-check.sh" '
         sh 'sudo chmod +x owasp-dependency-check.sh'
         sh 'sudo ./owasp-dependency-check.sh'
         sh 'sudo cat OWASP-Dependency-Check/reports/dependency-check-report.xml'
        
      }
    }
    
  }
}
